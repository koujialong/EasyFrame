<resources>

    <!-- Base application theme. -->
    <style name="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BasicActivityTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:windowAnimationStyle">@style/ActivityAct</item>-->
    </style>

    <style name="Titlebar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#ffcf92</item>
        <item name="android:maxEms">15</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- titlebar -->
    <style name="Titlebar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#0e2947</item>
    </style>

    <style name="Titlebar.Button">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/btn_titlebar_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>


</resources>
