<resources>

    <!-- Base application theme. -->
    <style name="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BasicActivityTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:windowAnimationStyle">@style/ActivityAct</item>-->
    </style>

    <style name="Titlebar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#ffcf92</item>
        <item name="android:maxEms">15</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- titlebar -->
    <style name="Titlebar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#0e2947</item>
    </style>

    <style name="Titlebar.Button">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/btn_titlebar_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!--对话框基础显示-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!--悬浮在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--背景透明-->
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <!--对话框背景样式-->
    <style name="DialogBackgroundStyle">
        <item name="android:layout_width">275dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:minWidth">275dip</item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:layout_marginRight">0dip</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/text_default</item>
    </style>

    <!-- 字体TextAppearance -->
    <style name="TextAppearance.Content">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark2</item>
    </style>
</resources>
