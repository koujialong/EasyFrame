<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_view"
    tools:context=".ui.MainActivity">

    <RadioGroup
        android:id="@+id/rg_tabs"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#000"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tab_homepage"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_footbar"
            android:button="@null"
            android:clickable="true"
            android:drawablePadding="-2dp"
            android:drawableTop="@drawable/bg_tab_homepage"
            android:focusable="true"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="页1"
            android:textColor="@drawable/bg_footbar_textcolor"
            android:textSize="10sp"/>

        <RadioButton
            android:id="@+id/tab_trade"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_footbar"
            android:button="@null"
            android:clickable="true"
            android:drawablePadding="-2dp"
            android:drawableTop="@drawable/bg_tab_trade"
            android:focusable="true"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="页2"
            android:textColor="@drawable/bg_footbar_textcolor"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/tab_watch"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_footbar"
            android:button="@null"
            android:clickable="true"
            android:drawablePadding="-2dp"
            android:drawableTop="@drawable/bg_tab_tomlive"
            android:focusable="true"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="页3"
            android:textColor="@drawable/bg_footbar_textcolor"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/tab_mine"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_footbar"
            android:button="@null"
            android:clickable="true"
            android:drawablePadding="-2dp"
            android:drawableTop="@drawable/bg_tab_mine"
            android:focusable="true"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="页4"
            android:textColor="@drawable/bg_footbar_textcolor"
            android:textSize="12sp"/>
    </RadioGroup>
</RelativeLayout>
